@model BanDTh.ViewModels.PromotionViewModel

@{
    ViewData["Title"] = "Chỉnh sửa chương trình khuyến mãi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="PromotionId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DiscountValue" class="form-label">Giá trị giảm</label>
                        <input asp-for="DiscountValue" type="number" class="form-control" />
                        <span asp-validation-for="DiscountValue" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="DiscountType" class="form-label">Loại giảm giá</label>
                        <select asp-for="DiscountType" class="form-select">
                            <option value="Percent">%</option>
                            <option value="Amount">Số tiền (VND)</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" min="@ViewBag.MinDate" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" type="date" class="form-control" asp-format="{0:yyyy-MM-dd}" min="@ViewBag.MinDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="SelectedProductIds" class="form-label">Áp dụng cho sản phẩm</label>
                    <select asp-for="SelectedProductIds" class="form-control" asp-items="@ViewBag.Products" multiple="multiple" style="height: 200px;"></select>
                    <span asp-validation-for="SelectedProductIds" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive">Kích hoạt</label>
                </div>

                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}