@model BanDTh.Models.News

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h1>@Model.Title</h1>

            <p class="text-muted">
                Đăng bởi <strong>@Model.Author.FullName</strong> vào ngày @string.Format("{0:dd/MM/yyyy}", Model.CreatedAt)
                <br>
                Chuyên mục: <span class="badge bg-secondary">@Model.Category?.Name</span>
            </p>

            <hr>

            <img src="~/images/news/@Model.Thumbnail" class="img-fluid rounded mb-4 w-100" alt="@Model.Title">

            <div class="article-content">
                @Html.Raw(Model.Content)
            </div>

            <hr>
            <a asp-controller="TinTuc" asp-action="Index" class="btn btn-light">‹ Quay lại danh sách tin tức</a>
        </div>
    </div>
</div>