@model IEnumerable<BanDTh.Models.News>

@{
    ViewData["Title"] = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">Tin Tức Công Nghệ</h1>

    <div class="card bg-dark text-white p-3 mb-4">
        <form asp-controller="TinTuc" asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="searchDate" class="form-label">Tìm theo ngày</label>
                    <input type="date" name="searchDate" class="form-control" value="@ViewBag.CurrentDate">
                </div>
                <div class="col-md-3">
                    <label for="categoryId" class="form-label">Danh mục</label>
                    <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">Tất cả danh mục</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="brandId" class="form-label">Thương hiệu</label>
                    <select name="brandId" class="form-select" asp-items="ViewBag.Brands">
                        <option value="">Tất cả thương hiệu</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Xóa lọc</a>
                    </div>
                </div>
            </div>
        </form>
    </div>


    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="~/images/news/@item.Thumbnail" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text text-muted small">
                                Tác giả: @item.Author.FullName | @string.Format("{0:dd/MM/yyyy}", item.CreatedAt)
                            </p>
                            <a asp-controller="TinTuc" asp-action="Details" asp-route-slug="@item.Slug"
                               class="btn btn-primary mt-auto">Đọc thêm</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center text-muted">Không tìm thấy bài viết nào phù hợp.</p>
            </div>
        }
    </div>
</div>