@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var title = ViewData["Title"] ?? "Admin Panel";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("UserRole") ?? "Guest";
    var email = HttpContextAccessor.HttpContext?.Session.GetString("UserEmail");
    var name = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            overflow-x: hidden;
        }

        #sidebar-wrapper {
            min-height: 100vh;
            position: fixed;
            top: 0;
            bottom: 0;
        }

        #page-content-wrapper {
            margin-left: 240px;
        }

        .active-item {
            background-color: #303030 !important;
            color: white !important;
            font-weight: 600;
        }

        .list-group-item-action:hover {
            background-color: #303030 !important;
            color: #fff !important;
        }

        .list-group-item {
            border: none !important;
        }

        .btn-circle {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #292929;
            color: #fff;
        }

            .btn-circle:hover {
                background-color: #e0e0e0;
                color: #000;
            }

            .btn-circle.dropdown-toggle::after {
                display: none !important;
            }

        .no-hover:hover {
            background-color: transparent !important;
            color: inherit !important;
        }
    </style>
</head>

<body class="bg-light">
    <div class="d-flex" id="wrapper" style="min-height: 100vh; background-color:#f2f2f2;">
        <div class="bg-black text-white border-end d-flex flex-column" id="sidebar-wrapper" style="width:240px;">
            <div class="sidebar-heading text-center py-4 fs-4 border-bottom fw-bold bg-black">⚙️ Quản trị hệ thống</div>
            <div class="list-group list-group-flush flex-grow-1 bg-black">

                <a asp-controller="Admin" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "Admin" && currentAction == "Index" ? "active-item" : "")">
                    Dashboard
                </a>

                <a asp-controller="Admin" asp-action="Users"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "Admin" && currentAction == "Users" ? "active-item" : "")">
                    Tài khoản
                </a>

                <a asp-controller="Categories" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "Categories" ? "active-item" : "")">
                    Danh mục
                </a>

                <a asp-controller="Products" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "Products" ? "active-item" : "")">
                    Sản phẩm
                </a>

                <a asp-controller="News" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "News" ? "active-item" : "")">
                    Tin tức
                </a>

                <a asp-controller="Promotions" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "Promotions" ? "active-item" : "")">
                    Khuyến mãi
                </a>

                <a asp-controller="DiscountCodes" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "DiscountCodes" ? "active-item" : "")">
                    Mã giảm giá
                </a>

                <a asp-controller="Repair" asp-action="Index"
                   class="list-group-item list-group-item-action text-white bg-black border-0 @(currentController == "Repair" ? "active-item" : "")">
                    Hỗ trợ & Sửa chữa
                </a>
            </div>
        </div>

        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand navbar-light border-bottom" style="background-color: #bebebe;">
                <div class="container-fluid">
                    <span class="navbar-brand fw-bold mx-1">@ViewData["Title"]</span>
                    <div class="d-flex">
                        <a class="btn-circle dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                            <li><h6 class="dropdown-item no-hover">Xin chào @name!</h6></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Trang người dùng</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="container-fluid p-4">@RenderBody()</main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>