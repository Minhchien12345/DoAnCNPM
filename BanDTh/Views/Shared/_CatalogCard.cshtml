@model BanDTh.Models.Category

<style>
    /* Đổi tên class cho rõ ràng hơn */
    .catalog-card {
        background: #2c2c2c; /* nền xám đậm */
        border-radius: 15px; /* bo góc */
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        max-width: 150px; /* giới hạn chiều ngang */
        height: 100%; /* Giúp các thẻ có chiều cao bằng nhau */
    }

        .catalog-card:hover {
            transform: translateY(-5px); /* hover nổi lên */
            box-shadow: 0 4px 20px rgba(255, 255, 255, 0.4); /* bóng mờ */
        }

        .catalog-card h5 {
            color: #fff; /* chữ trắng */
            font-size: 13px;
        }

    .catalog-img {
        max-height: 50px; /* giới hạn chiều cao icon cho hợp lý */
        object-fit: contain;
        margin-bottom: 10px;
    }

</style>

<div class="catalog-card text-center">
    <a asp-controller="Catalog" asp-action="Index" asp-route-category="@Model.Slug"
       class="text-decoration-none text-light">

        <img src="~/images/categories/@Model.Icon" class="img-fluid catalog-img" alt="@Model.Name" loading="lazy">
        <h5 class="mt-3">@Model.Name</h5>
    </a>
</div>