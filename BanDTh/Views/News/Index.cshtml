@model IEnumerable<BanDTh.Models.News>

@{
    ViewData["Title"] = "Quản lý Tin tức";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .news-card-admin {
        display: flex;
        flex-direction: row;
        height: 100%;
    }

        .news-card-admin .card-img-container {
            flex-shrink: 0;
            width: 150px; /* Chiều rộng cố định cho ảnh */
        }

        .news-card-admin .card-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .news-card-admin .card-body {
            display: flex;
            flex-direction: column;
        }

        .news-card-admin .actions {
            margin-top: auto; /* Đẩy nút xuống dưới cùng */
        }
</style>

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Thêm bài viết mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row row-cols-1 row-cols-lg-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card news-card-admin">
                    <div class="card-img-container">
                        <img src="~/images/news/@item.Thumbnail" class="card-img" alt="@item.Title">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text small text-muted mb-2">
                            Tác giả: @item.Author.FullName | @string.Format("{0:dd/MM/yyyy}", item.CreatedAt)
                        </p>

                        @if (item.IsPublished)
                        {
                            <span class="badge bg-success align-self-start">Đã xuất bản</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary align-self-start">Bản nháp</span>
                        }

                        <div class="actions text-end mt-3">
                            <a asp-action="Edit" asp-route-id="@item.NewsId" class="btn btn-warning btn-sm" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.NewsId" class="btn btn-danger btn-sm" title="Xóa"><i class="bi bi-trash3"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>