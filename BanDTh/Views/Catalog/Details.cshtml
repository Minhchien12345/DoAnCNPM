@model BanDTh.Models.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";

    // ✅ SỬA ĐỔI: Lấy đối tượng PriceCalculationResult từ ViewBag.PriceDetails
    var priceDetails = ViewBag.PriceDetails as BanDTh.Helpers.PriceCalculationResult;
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/products/@Model.Thumbnail" class="img-fluid border rounded shadow-sm" alt="@Model.Name" />
        </div>

        <div class="col-md-7">
            <h2 class="mb-3">@Model.Name</h2>

            <div class="price-section mb-3">
                @if (priceDetails != null && priceDetails.FinalPrice < Model.Price)
                {
                    <p class="text-danger fw-bold fs-4 mb-0">
                        @priceDetails.FinalPrice.ToString("N0") ₫
                    </p>
                    <p class="text-muted text-decoration-line-through">
                        Giá gốc: @Model.Price.ToString("N0") ₫
                    </p>
                }
                else
                {
                    <p class="text-danger fw-bold fs-4">
                        @Model.Price.ToString("N0") ₫
                    </p>
                }
            </div>

            @if (priceDetails != null && priceDetails.PromotionEndDate.HasValue)
            {
                <div class="alert alert-warning py-2 small">
                    Khuyến mãi chỉ còn đến hết ngày <strong>@priceDetails.PromotionEndDate.Value.ToString("dd/MM/yyyy")</strong>
                </div>
            }

            <p><strong>Danh mục:</strong> @Model.Category?.Name</p>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="mt-3">@Html.Raw(Model.Description)</div>
            }
            else
            {
                <p class="text-muted mt-3">(Chưa có mô tả chi tiết cho sản phẩm này)</p>
            }

            <a href="@Url.Action("Index", "Catalog")" class="btn btn-secondary mt-4">
                ← Quay lại danh sách
            </a>
        </div>
    </div>
</div>