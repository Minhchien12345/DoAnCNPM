@model BanDTh.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>
    <h3 class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm "@Model.Name" không?</h3>

    <div class="card shadow mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Giá bán</dt>
                <dd class="col-sm-9">@Model.Price.ToString("N0") đ</dd>

                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Ảnh</dt>
                <dd class="col-sm-9">
                    <img src="~/images/products/@Model.Thumbnail" style="max-width: 200px;" />
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger">Xóa vĩnh viễn</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>