@{
   Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Đăng nhập";
}
<style>
form .form-floating label {
    color: #666;
}
form .form-control {
    border-radius: 10px;
    padding: 12px 15px;
}
form .btn-dark {
    background-color: #000;
    border: none;
    transition: background-color 0.2s ease;
}
form .btn-dark:hover {
    background-color: #333;
}

</style>
<!-- Header ngay trên form -->
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <a href="/" class="fw-semibold text-dark text-decoration-none">← Trang chủ</a>
    </div>
<div class="text-center mb-4">
    <h2 class="fw-bold">Đăng nhập</h2>
    <p class="text-muted">Vui lòng nhập thông tin để tiếp tục</p>
</div>
<form method="post" asp-action="Login" asp-controller="Home">
    <div class="form-floating mb-3">
        <input type="email" name="Email" class="form-control rounded-3" id="emailInput" placeholder="name@example.com" required />
        <label for="emailInput">Email</label>
    </div>

    <div class="form-floating mb-3">
        <input type="password" name="Password" class="form-control rounded-3" id="passwordInput" placeholder="Mật khẩu" required />
        <label for="passwordInput">Mật khẩu</label>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="rememberMe" />
            <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
        </div>
        <a href="#" class="small text-decoration-none link-primary">Quên mật khẩu?</a>
    </div>

    <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">Đăng nhập</button>

    <div class="text-center mt-4">
        <p class="mb-0">Chưa có tài khoản? 
            <a asp-action="Register" asp-controller="Home" class="link-primary">Đăng ký ngay</a>
        </p>
    </div>
</form>
